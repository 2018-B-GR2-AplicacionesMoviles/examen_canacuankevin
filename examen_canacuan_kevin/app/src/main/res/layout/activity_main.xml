<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="INGRESAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_ingresar" android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="LISTAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_listar" app:layout_constraintEnd_toEndOf="@+id/button_ingresar"
            app:layout_constraintStart_toStartOf="@+id/button_ingresar" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ingresar"/>
</android.support.constraint.ConstraintLayout>